<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Guardia">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Guardia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AÑADIR ESTAS DECLARACIONES DE ACTIVITY -->
        <activity
            android:name=".LoginActivity"
            android:label="Iniciar Sesión"
            android:theme="@style/Theme.Guardia" />
        <!-- android:exported="false" es el valor por defecto si no hay intent-filter,
             lo que es seguro si solo se lanza desde tu propia app. -->

        <activity
            android:name=".RegisterActivity"
            android:label="Crear Cuenta"
            android:theme="@style/Theme.Guardia" />
        <!-- android:exported="false" es el valor por defecto. -->

        <!-- Si tienes una HomeActivity o similar después del login, también declárala:
        <activity
            android:name=".HomeActivity"
            android:label="Inicio"
            android:theme="@style/Theme.Guardia" />
        -->

    </application>

</manifest>
